<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow mb-4">
      <div class="card-body">
        <h3 class="card-title mb-3 text-center">Your Todos</h3>
        <form action="/todos" method="POST" class="d-flex mb-3">
          <input type="text" name="text" class="form-control me-2" placeholder="New Todo" required>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
        <ul class="list-group">
          <% todos.forEach(todo => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= todo.text %>
              <form action="/todos/delete/<%= todo._id %>" method="POST">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            <form action="/todos/update/<%= todo._id %>" method="POST" class="d-inline">
  <input type="text" name="text" value="<%= todo.text %>" required>
  <button class="btn btn-warning btn-sm">Update</button>
</form>

            </li>
          <% }) %>
        </ul>
      <div class="card-body">
  <form action="/todos/delete" method="POST">
    <button class="btn btn-warning btn-sm">
      Delete All
    </button>
  </form>
</div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
